@model List<Flight>
@{
    ViewBag.Title = "Flight List";
}

<title>Transportation Index</title>

<h1>Flight list</h1>

<a asp-controller="Transportation" asp-action="Select">Choose this flight</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Airport</th>
            <th>Airline</th>
            <th>Location</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Price</th>
            <th>Availability</th>
        </tr>
    </thead>
<tbody>
    @foreach (var flight in Model)
    {
        <tr>
            <td>@flight.Airport</td>
            <td>@flight.Airline</td>
            <td>@flight.Location</td>
            <td>@flight.DepartureTime</td>
            <td>@flight.ArrivalTime</td>
            <td>@flight.Price</td>
            <td>@flight.Availability</td>

            <!-- If this was car rental, create your own button would be here -->
        </tr>
    }
</tbody>
</table>
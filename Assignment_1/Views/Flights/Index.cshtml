@model List<Flight>
@{
    ViewBag.Title = "Flight List";
}

<title>Transportation Index</title>

<h1>Flight list</h1>

<div id="searchBar">
    <form asp-controller="Flights" asp-action="Index" method="get" class="mb-3 mt-2 align-content-lg-around">
        <div class="card-header m-5 border-4 shadow-sm pt-3 pb-3">
            <div class="form-group align-content-center ms-lg-3">
                <input type="text" class="form-control-lg col-lg-4 ms-3 me-2 col-md-12" name="searchString" placeholder="Destination..." value="@ViewData["CurrentSearch"]" />
                <!--
                <input type="date" class="col-form-label-lg col-md-2 me-2" name="DepartureTime" />
                <input type="date" class="col-form-label-lg col-md-2" name="ArrivalDate" />
                -->
                <button type="submit" class="btn btn-secondary mb-2 btn-lg ms-5">Search</button>
            </div>
        </div>
    </form>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Airport</th>
            <th>Airline</th>
            <th>Location</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Specifications</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td><a asp-action="BookFlight" asp-route-id="@flight.FlightId" class="btn btn-danger">Book</a></td>
                <td>@flight.Airport</td>
                <td>@flight.Airline</td>
                <td>@flight.Location</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.Price</td>
                <td>@flight.Availability</td>
                <td><a asp-action="Specifications" asp-route-id="@flight.FlightId" class="btn btn-danger">Details</a></td>
                <!-- If this was car rental, create your own button would be here -->
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="CreateFlight">Create Flight</a>
</p>